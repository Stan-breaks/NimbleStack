package views

templ Counter() {
<div class="flex items-center justify-center space-x-4 p-4 bg-white rounded shadow-lg" x-data="{ count: 0 }">
  <button class="bg-blue-500 text-white px-4 py-2 rounded" @click="count--">-</button>
  <span class="text-2xl font-bold" x-text="count"></span>
  <button class="bg-blue-500 text-white px-4 py-2 rounded" @click="count++">+</button>
</div>
}
